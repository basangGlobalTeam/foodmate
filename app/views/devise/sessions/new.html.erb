<% content_for "form" do %>
  <%= render "devise/intro" %>
<% end %>
<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item active">
    <a class="nav-link active" data-toggle="tab" href="#profile" role="tab">
      <svg class="olymp-register-icon"><use xlink:href="/icons/icons.svg#olymp-register-icon"></use></svg>
    </a>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane active" id="profile" role="tabpanel" data-mh="log-tab">
    <div class="title h6">ログイン</div>
    <form class="content" action="<%= user_session_path %>" method="POST">
      <div class="row">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <div class="col-xl-12 col-lg-12 col-md-12">
          <div class="form-group label-floating">
            <label class="control-label">メールアドレス</label>
            <input class="form-control" placeholder="" type="email" name="user[email]" required>
          </div>
          <div class="form-group label-floating">
            <label class="control-label">パスワード</label>
            <input class="form-control" placeholder="" type="password" name="user[password]" required>
          </div>

          <div class="remember">

            <div class="checkbox">
              <label>
                <input name="optionsCheckboxes" type="checkbox">
                パスワードを記憶します
              </label>
            </div>
            <a href="#" class="forgot">パスワードを忘れた？</a>
          </div>

          <button href="#" type="submit" class="btn btn-lg btn-primary full-width">ログイン</button>

          <div class="or"></div>

          <a href="#" class="btn btn-lg bg-facebook full-width btn-icon-left"><i class="fa fa-facebook" aria-hidden="true"></i>Facebookでログイン</a>

          <a href="#" class="btn btn-lg bg-twitter full-width btn-icon-left"><i class="fa fa-twitter" aria-hidden="true"></i>Twitterでログイン</a>


          <p>アカウント持ってますか？持ってないなら <a href="<%= new_user_registration_path %>">今すぐ登録!</a></p>
        </div>
      </div>
    </form>
  </div>
</div>
